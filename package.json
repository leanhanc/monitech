	"scripts": {
		"dev": "npx nx run-many --target=serve",
		"lint": "npx nx run-many --target=lint --all=true --fix=true",
		"build": "npx nx run-many --target=build --all=true --with-deps=true",
		"db:migrate:generate": "drizzle-kit generate:pg --config='./packages/db/src/migrations.config.ts'",
		"db:migrate:down": "drizzle-kit drop --config='./packages/db/src/migrations.config.ts'",
		"db:migrate:check": "drizzle-kit check:pg --config='./packages/db/src/migrations.config.ts'",
		"db:migrate:run": "npx nx run migrator:serve"
	},
